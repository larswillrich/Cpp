#include "TDate.h"
#include <time.h>
#include <stdio.h>

TDate::TDate() {
	time_t rawTime;
	struct tm *ts;

	rawTime = time(NULL);
	ts = localtime(&rawTime);


	TDate(ts->tm_mday,ts->tm_mon,ts->tm_year);
}

TDate::TDate(int day, int month, int year){
	this->day = day;
	this->month = month;
	this->year = year;
}

int TDate::getDay() const
{
    return day;
}

void TDate::setDay(int day)
{
    this->day = day;
}

int TDate::getMonth() const
{
    return month;
}

void TDate::setMonth(int month)
{
    this->month = month;
}

int TDate::getYear() const
{
    return year;
}

void TDate::setYear(int year)
{
    this->year = year;
}

void TDate::printDate(){
	printf("Aktuelles Datum: %.2i.%.2i.%.2i", getDay(), getMonth() + 1, 1900 + getYear());
}

TDate::~TDate() {
	printf("Destructor!!\n");
}


int main(){
	TDate *t = new TDate();
	t->printDate();
}
