#include "TTime.h"
#include <time.h>
#include <stdio.h>

TTime::TTime() {
	time_t rawTime;
	struct tm *ts;

	rawTime = time(NULL);
	ts = localtime(&rawTime);

	setHour(ts->tm_hour);
	setMinute(ts->tm_min);
	setSecond(ts->tm_sec);
}

TTime::TTime(int hour, int minute) {

	setHour(hour);
	setMinute(minute);
	setSecunde(minute);
}

TTime::~TTime() {
}

int TTime::getHour() const {
	return hour;
}

void TTime::setHour(int hour) {
	this->hour = hour;
}

int TTime::getMinute() const {
	return minute;
}

void TTime::setMinute(int minute) {
	this->minute = minute;
}

int TTime::getSecond() const {
	return second;
}

void TTime::setSecond(int second) {
	this->second = second;
}

void TTime::print() {
	printf("%.2i:%.2i", getHour(), getMinute());
}
